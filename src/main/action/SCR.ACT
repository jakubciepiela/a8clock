BYTE activeLoop

INCLUDE "D2:CONSOLE.ACT"
INCLUDE "D8:GR0.ACT"     

PROC DoOption()
  activeLoop=0
return

PROC Main()
  BYTE a
  INITCONSOLE()
  Option=DoOption
  Graphics(0)
  activeLoop=1
  WHILE activeLoop<>0
    DO
      for a = 33 to 63
        do
          ClearScreen(a)
        od
    OD
RETURN

